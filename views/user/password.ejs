<div class="change-password">
  <form
    action="/docs/member/change_password?_method=PUT"
    method="POST"
    class="d-inline"
    id="form-change-password"
  >
    <div class="mb-3">
      <label for="pw1" class="form-label">Current Password</label>
      <input type="text" class="form-control" name="current_pw" />
    </div>
    <div class="mb-3">
      <label for="pw2" class="form-label">New Password</label>
      <input type="text" class="form-control" name="new_pw" />
    </div>
    <div class="mb-3">
      <label for="pw3" class="form-label">Confirm Password</label>
      <input type="text" class="form-control" name="confirm_pw" />
    </div>
    <input type="hidden" name="id" value="<%= user.id %>" />
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>
